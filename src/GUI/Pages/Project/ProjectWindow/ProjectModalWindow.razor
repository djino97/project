@using LT.DigitalOffice.GUI.Properties
@using LT.DigitalOffice.GUI.Shared

<div 
    class="modal fade" 
    id="project-modal-center" 
    tabindex="-1" 
    role="dialog" 
    aria-labelledby="project-modal-center-title"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                
                <h5 class="modal-title" id="project-modal-center-title">@Resources.ProjectWindow</h5>
                <button 
                    type="button" 
                    class="close" 
                    data-dismiss="modal" 
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
                <div class="modal-body">

                    @if (_project != null && _project.Project.Id != Guid.Empty)
                    {
                        <div class="task-content">

                            <div>
                                <div>
                                    <h1>@_project?.Project.Name</h1>
                                    <p>@Resources.ProjectStatus: @_project.Project.Status</p>
                                    <p>@Resources.ShortName: @_project.Project.ShortName</p>
                                    <p>@Resources.ProjectDepartment: @_project.Project.Department.Name</p>
                                    <p>@Resources.ProjectDataCreation: @(((DateTime)_project.Project.CreatedAtUtc).ToShortDateString())</p>
                                </div>
                            </div>
                            <div id="accordion">
                                <div class="card">
                                   
                                   @if (_project.Project.Description != null)
                                   {
                                        <div class="card-header" id="headingOne">
                                            <h5 class="mb-0">
                                                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne"
                                                aria-expanded="true" aria-controls="collapseOne">
                                                    @Resources.ProjectDescription
                                                </button>
                                            </h5>
                                        </div>
                                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                        data-parent="#accordion">
                                            <div class="card-body">
                                                <div>
                                                    @_project.Project.Description
                                                </div>
                                            </div>
                                        </div>
                                   }
                                    <div class="card-header" id="headingTwo">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseTwo"
                                            aria-expanded="true" aria-controls="collapseTwo">
                                                @Resources.Users
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo"
                                    data-parent="#accordion">
                                        <div class="card-body">
                                            @foreach (var user in _project.Users)
                                            {
                                                <div class="card-body_user-data">
                                                    <img src="" alt="avatar" class="rounded-circle">
                                                    <p>@string.Join(" ", user.FirstName, user.MiddleName)</p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="card-header" id="headingThree">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseThree"
                                            aria-expanded="true" aria-controls="collapseThree">
                                                @Resources.ProjectFiles
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree"
                                    data-parent="#accordion">
                                        <div class="card-body">

                                            __Files
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
        </div>
    </div>
</div>