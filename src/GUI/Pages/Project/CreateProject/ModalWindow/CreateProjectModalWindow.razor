@using LT.DigitalOffice.GUI.Properties
@using LT.DigitalOffice.GUI.Services.ApiClients.UserService
@using LT.DigitalOffice.GUI.Services.ApiClients.ProjectService
@using LT.DigitalOffice.GUI.Shared.UsersWindow
@using LT.DigitalOffice.GUI.Pages.Project.CreateProject.ProjectGeneralInfo

<div class="modal fade" id="сreate-project-modal-center" tabindex="-1" 
  role="dialog" aria-labelledby="create-project-modal-center-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      
      <div class="modal-header">
        
        <h5 class="modal-title" id="create-project-modal-center-title">@Resources.ProjectCreationModalTitle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body">

        @if (_isShowEmployeesForm)
        {
            <AddUsers
              @bind-ProjectRequest="_request"
              @bind-FoundEmployees="_foundEmployees"
              @bind-IsShowEmployeesForm="_isShowEmployeesForm"/>
        }
        else
        {
            <GeneralInfo 
              @bind-ProjectRequest="_request"
              @bind-IsShowEmployeesForm="_isShowEmployeesForm"/>
        }

      </div>

      <div class="modal-footer">
        
      </div>

    </div>
  </div>
</div>

@code{
  private ProjectRequest _request;
  private List<UserInfo> _foundEmployees;

  private bool _isShowEmployeesForm;
}
